<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    tools:context=".PlaylistActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <!-- ListView in which we will present the list of songs-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Actual Playlist:"
        android:id="@+id/textView2"
        android:textColor="#ffff5100" />

    <ListView
        android:id="@+id/song_list"
        android:layout_width="fill_parent"
        android:layout_height="184dp">
        <!--android:saveEnabled="false"> for stop saving the Activity state to bundle-->

    </ListView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_gravity="right"
        android:src="@drawable/play"
        android:onClick="onPlayClicked" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:src="@drawable/end"
        android:layout_gravity="right"
        android:onClick="onStopClicked" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shuffled"
        android:id="@+id/checkBox"
        android:textColor="#ff000000"
        android:checked="false"
        android:background="#ff0043ff"
        android:layout_gravity="right"
        android:onClick="onCheckBoxShuffledClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/button3"
        android:onClick="onBackClicked" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is for your information."
        android:id="@+id/textView3"
        android:layout_gravity="right"
        android:textColor="#ffff00cf" />

</LinearLayout><!-- From: file:/home/janca/Desktop/playonce-player/app/src/main/res/layout/activity_playlist.xml -->